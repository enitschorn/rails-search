<%= link_to flat do %>
  <div class="card-trip">
    <img src="<%= flat.picture_url%>" />
    <div class="card-trip-infos">
      <div>
        <h2><%= flat.name %></h2>
        <p><%= flat.description %></p>
      </div>
      <h2 class="card-trip-pricing"><%= flat.price_per_night %></h2>
    </div>
  </div>
<% end %>
